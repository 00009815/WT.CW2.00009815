extends layout.pug 

block content 
    main.main 
        div.create-wrapper
            h1.create-title Create new task

            if error
                p.error Fill all input boxes.

            if success
                p.success Task is saved.

            form.form(method='POST' action='/tasks/create')
                label.label Title:
                input.input(type='text' name='title' size="15")

                label.label Description: 
                textarea.input(type='text' name='description' rows='6' cols='40')

                button.crt-btn Create task